@model IEnumerable<Kitap>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-body-tertiary">
    <div class="col-md-6 p-lg-5 mx-auto my-5">
        <h1 class="display-3 fw-bold">Aradığın Kitaplar Burada</h1>
        <h3 class="fw-normal text-muted mb-3">Karar vermen için buradayız.</h3>
    </div>
</div>

<div class="container d-flex flex-column align-items-stretch">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 d-flex align-items-stretch">
        @foreach (var kitap in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <a href="@Url.Action("Index", "Book", new { slug = kitap.Slug })">
                        <img class="bd-placeholder-img card-img-top" src="@kitap.Resim1" alt="Örnek Resim" width="100%" height="600">
                    </a>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <p style="font-weight: bold; font-size: 23px; text-align: center;" class="card-title">@kitap.Yazar <br>@kitap.İsim</p>
                        <p class="card-text">@kitap.Out_Text</p>
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="btn-group">
                                <a href="@Url.Action("Index", "Book", new { slug = kitap.Slug })">
                                    <button type="button" class="btn btn-sm"><i style="font-size: 30px;" class="bi bi-binoculars-fill"></i></button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>